<div class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" style="min-width:690px;">
            <div class="modal-header" ng-show="title">
                <button type="button" class="close" ng-click="$hide()">&times;</button>
                <h4>
                    <i class="fa fa-bell-o"></i>
                    {{title}}
                </h4>
            </div>
            <div class="modal-body">
                <form role="form" name="formSupGrade" novalidate class="form-horizontal" onkeypress="if (event.keyCode === 13) return false;">
                    <fieldset>
                        <div class="form-group">
                            <label for="supplierId" class="col-md-2 control-label">供应商编号</label>
                            <div class="col-md-4">
                                <label class="label label-primary">{{vm.SupplierId}}</label>
                            </div>
                            <label for="supplierName" class="col-md-2 control-label">供应商名称</label>
                            <div class="col-md-4">
                                <label class="label label-success">{{vm.SupplierName}}</label>
                            </div>
                        </div>
                        <div class="h-split"></div>
                        <div class="form-group">
                            <label for="supGradeType" class="col-md-2 control-label">评分类别</label>
                            <div class="col-md-4">
                                <button type="button" class="btn btn-default" ng-model="vm.SupGradeType" data-html="1" data-placeholder="评分类别"
                                        data-toggle="true" bs-options="grade.id as grade.text for grade in gradeTypes" bs-select>
                                    评分类别 <span class="caret"></span>
                                </button>
                                <input name="supGradeType" class="form-control" ng-model="vm.SupGradeType" required  ng-show="false"/>
                                <div class="error-messages" ng-messages="formSupGrade.supGradeType.$error" ng-show="operate.showValidation">
                                    <small ng-message="required">评分类别不能为空</small>
                                </div>
                            </div>
                            <label for="firstGradeDate" class="col-md-2 control-label">首评日期</label>
                            <div class="col-md-4">
                                <input name="firstGradeDate" type="date" class="form-control" ng-model="vm.FirstGradeDate" format-date required />
                                <div class="error-messages" ng-messages="formSupGrade.firstGradeDate.$error" ng-show="operate.showValidation">
                                    <small ng-message="required">首评日期不能为空</small>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="firstGradeScore" class="col-md-2 control-label">首评分数</label>
                            <div class="col-md-4">
                                <input name="firstGradeScore" type="number" class="form-control" ng-model="vm.FirstGradeScore" required />
                                <div class="error-messages" ng-messages="formSupGrade.firstGradeScore.$error" ng-show="operate.showValidation">
                                    <small ng-message="required">首评分数不能为空</small>
                                </div>
                            </div>
                            <label for="secondGradeScore" class="col-md-2 control-label">复评分数</label>
                            <div class="col-md-4">
                                <input name="secondGradeScore" type="number" class="form-control" ng-model="vm.SecondGradeScore" required />
                                <div class="error-messages" ng-messages="formSupGrade.secondGradeScore.$error" ng-show="operate.showValidation">
                                    <small ng-message="required">复评分数不能为空</small>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" ng-click="$hide()"><i class="fa fa-undo"></i>取消</button>
                <button type="button" class="btn btn-primary" ng-click="operate.savePurSupGradeDatas(formSupGrade.$valid)"><i class="fa fa-save"></i>确定</button>
            </div>
        </div>
    </div>
</div>