@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="bpm.hrApp">
<head>
    <meta http-equiv="Content-Type" />
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1,user-scalable=no" />
    <title>人力资源管理</title>
    <link rel="shortcut icon" href="@Url.Content("~/Content/login/lmlogo.png")" />

    <link href="@Url.Content("~/Content/bootstrap/dist/css/bootstrap.min.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootwatch/cerulean.bootstrap.min.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/font-awesome/css/font-awesome.min.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/main.css")" type="text/css" rel="stylesheet" />

    <link href="@Url.Content("~/Content/zTree/dist/css/zTreeStyle/zTreeStyle.css")" type="text/css" rel="stylesheet" />

    @Styles.Render("~/css/anstrap")
</head>
<body ng-controller="moduleNavCtrl">
    @if (ViewBag.IsLoginMode)
    {
        <div ng-include="'@Url.Action("ModuleLayoutIndexTpl", "CommonTpl")'"></div>
    }
    else
    {
        <div>
            <header role="banner">
                <nav role="navigation" class="navbar navbar-static-top navbar-inverse">
                    <div class="container">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="@Url.Action("Index","Home")">
                                <span>
                                    <img alt="光圣科技（宁波）有限公司" title="光圣科技（宁波）有限公司"
                                         src="@Url.Content("~/Content/login/lmlogo.png")"
                                         style="margin-left: -50px;margin-top: -5px;background-color: whitesmoke;height: 28px;width: 32px;border-radius: 5px;margin-right: 3px;" />
                                    企业信息化平台(V1.0)
                                </span>
                            </a>
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li>
                                    <a href="#">配置管理</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>
            <main class="container-fluid">
                <div class="row">
                    <div class="col-md-2">
                        <div class="bs-callout bs-callout-info">
                            <h4><span class="fa fa-list-ul">导航菜单</span></h4>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <ol class="rounded-list">
                                    <li>
                                        <a data-ui-sref-active="active" data-ui-sref="hrEmployeeDataInput" style="cursor:pointer">档案登记</a>
                                        <a data-ui-sref-active="active" data-ui-sref="hrLeaveOffManage" style="cursor:pointer">离职管理</a>

                                        <a data-ui-sref-active="active" data-ui-sref="hrChangeWorkerId" style="cursor:pointer">变更工号</a>

                                        <a data-ui-sref-active="active" data-ui-sref="hrPrintCard" style="cursor:pointer">厂牌打印</a>
                                        <a data-ui-sref-active="active" data-ui-sref="hrClassTypeManage" style="cursor:pointer">班别管理</a>
                                        <a data-ui-sref-active="active" data-ui-sref="hrAttendInToday" style="cursor:pointer">今日考勤</a>

                                        <a data-ui-sref-active="active" data-ui-sref="hrAskLeaveManage" style="cursor:pointer">请假管理</a>
                                        <a data-ui-sref-active="active" data-ui-sref="hrHandleException" style="cursor:pointer">异常处理</a>

                                        <a data-ui-sref-active="active" data-ui-sref="gaWorkerClothesManage" style="cursor:pointer">厂服管理</a>
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div data-ui-view>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    }

    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/angularJs")

    <script src="@Url.Content("~/Content/ztree/dist/js/jquery.ztree.all.min.js")"></script>
    <script src="@Url.Content("~/Content/pdfmaker/pdfmake.min.js")"></script>
    <script src="@Url.Content("~/Content/pdfmaker/vfs_fonts.js")"></script>

    @Scripts.Render("~/bundles/anstrap")

    <script src="@Url.Content("~/Scripts/common/angulee.js")"></script>
    <script src="@Url.Content("~/Scripts/common/commDirective.js")"></script>

    <script src="@Url.Content("~/Scripts/controller/masterProduct/mpConfigApp.js")"></script>

    <script src="@Url.Content("~/Scripts/controller/hr/hrApp.js")"></script>
    <script src="@Url.Content("~/Scripts/controller/hr/hrArchivesManage.js")"></script>
</body>
</html>