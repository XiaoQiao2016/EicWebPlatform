<div class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" ng-show="title">
                <button type="button" class="close" ng-click="$hide()">&times;</button>
                <h4>
                    <i class="fa fa-bell-o"></i>
                    {{title}}
                </h4>
            </div>
            <div class="modal-body">
                <div class="panel">
                    <form name="modalForm" role="form" class="form-horizontal" novalidate>
                        <fieldset>
                            <legend>
                                工号：{{vm.WorkerId}}
                                姓名：{{vm.WorkerName}}
                            </legend>
                        </fieldset>

                        <div class="form-group">
                            <label for="slotCardTime1" class="col-md-2 control-label">考勤日期</label>
                            <div class="col-md-4">
                                <label class="control-label"><span class="text-info">{{vm.AttendanceDate}}</span></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="slotCardTime1" class="col-md-2 control-label">刷卡时间1</label>
                            <div class="col-md-4">
                                <input name="slotCardTime1" type="text" class="form-control" bs-timepicker data-time-format="HH:mm"
                                       ng-model="vm.SlotCardTime1" required data-arrow-behavior="picker" data-format-time />
                                <div class="error-messages" ng-messages="modalForm.slotCardTime1.$error" ng-show="operate.showValidation">
                                    <small ng-message="required">刷卡时间1不能为空</small>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="slotCardTime2" class="col-md-2 control-label">刷卡时间2</label>
                            <div class="col-md-4">
                                <input name="slotCardTime2" type="text" class="form-control" bs-timepicker data-time-format="HH:mm"
                                       ng-model="vm.SlotCardTime2" data-arrow-behavior="picker" data-format-time />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="forgetSlotReason" class="col-md-2 control-label">备注</label>
                            <div class="col-md-4">
                                <textarea rows="2" name="forgetSlotReason" class="form-control" ng-model="vm.ForgetSlotReason" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" ng-click="$hide()"><i class="fa fa-undo"></i>取消</button>
                <button type="button" class="btn btn-primary" ng-click="save(modalForm.$valid)"><i class="fa fa-save"></i>确定</button>
            </div>
        </div>
    </div>
</div>