<div class="panel panel-primary" ng-controller="inspectionFormManageOfIqcCtrl">
    <div class="panel-heading">
        <h6 class="panel-title">
            IQC检验表单管理
        </h6>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-10">
                <form class="form-inline" novalidate>
                    <div class="form-group">
                        <div yl-date-range date-from="vmManager.dateFrom" date-to="vmManager.dateTo"></div>
                    </div>
                    <div class="form-group">
                        <label>单据状态:</label>
                        <button type="button" class="btn btn-success" ng-model="vmManager.selectedFormStatus"
                                data-html="1" data-multiple="0" data-animation="am-flip-x" data-placeholder="未完成"
                                data-bs-options="formStatus.value as formStatus.label for formStatus in vmManager.formStatuses track by $index" data-bs-select>
                            <span class="caret"></span>
                        </button>
                    </div>
                    <span class="btn btn-primary" ng-click="vmManager.getMasterDatas()"><i class="fa fa-search"></i>查询</span>
                    <span yl-operatemsg-board></span>
                </form>
            </div>
        </div>
        <div class="h-split"></div>

        <div class="row">
                <div id="editWindow">
                    <div class="table-responsive" style="min-height:500px;" cg-busy="{promise:searchPromise}">
                        <table class="table table-striped table-hover table-bordered" style="table-layout:fixed;word-wrap:break-word; text-wrap:none;">
                            <thead>
                                <tr class="info">
                                    <th>单号</th>
                                    <th>料号</th>
                                    <th>供应商</th>
                                    <th>检测项目</th>
                                    <th>图号</th>
                                    <th>进货数量</th>
                                    <th>检测状态</th>
                                    <th>进货日期</th>
                                    <th>操作(<i class="fa fa-pencil-square-o"></i>)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in vmManager.editDatas track by $index">
                                    <td>{{item.OrderId}}</td>
                                    <td style="white-space:nowrap;">
                                        <span title="品名:{{item.MaterialName}} 规格:{{item.MaterialSpec}}">{{item.MaterialId}}</span>
                                    </td>
                                    <td>{{item.MaterialSupplier}}</td>
                                    <td>{{item.InspectionItems}}</td>
                                    <td>{{item.MaterialDrawId}}</td>
                                    <td>{{item.MaterialCount}}</td>
                                    <td>
                                        <span title="检测方式:{{item.InspectionMode}}，检测结果:{{item.InspctionResult}},检测日期:{{item.MaterialInDate}}">
                                            {{item.InspectionStatus}}
                                        </span>
                                    </td>
                                    <td>{{item.MaterialInDate}}</td>
                                    <td>
                                        <button type="button" class="btn btn-primary btn-xs" ng-click="vmManager.getDetailDatas(item)">明细</button>
                                        <button type="button" class="btn btn-warning btn-xs" ng-click="vmManager.showCheckModal(item)" ng-show="item.InspectionStatus!=='已审核'">审核</button>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
        </div>
        <div pageslide ps-open="vmManager.isShowDetailWindow" ps-side="right" ps-size="{{vmManager.editWindowWidth}}" ps-speed="0.25" ps-container='editWindow'>
            <div class="well" style="max-height:520px;overflow-y:scroll;">
                <div class="page-header text-center">
                    <h1>光圣科技(宁波)有限公司</h1>
                    <h2>进料检验记录表</h2>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <span>
                            <label>品名:</label>
                            {{vmManager.currentItem.MaterialName}}
                        </span>
                    </div>
                    <div class="col-md-4">
                        <span>
                            <label>规格:</label>
                            {{vmManager.currentItem.MaterialSpec}}
                        </span>
                    </div>
                    <div class="col-md-4">
                        <span>
                            <label>数量:</label>
                            {{vmManager.currentItem.MaterialCount}}
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <span>
                            <label>供应商:</label>
                            {{vmManager.currentItem.MaterialSupplier}}
                        </span>
                    </div>
                    <div class="col-md-4">
                        <span>
                            <label>图号/检验规范:</label>
                            {{vmManager.currentItem.MaterialDrawId}}
                        </span>
                    </div>
                    <div class="col-md-4">
                        <span>
                            <label>检验方式:</label>
                            {{vmManager.currentItem.InspectionMode}}
                        </span>
                    </div>

                </div>
                <div class="table-responsive">
                    <table class="table table-responsive table-striped table-hover table-bordered">
                        <thead>
                            <tr class="info">
                                <th>检验项目</th>
                                <th>规格值</th>
                                <th>检验水平</th>
                                <th>抽样方案</th>
                                <th>检验方法</th>
                                <th>量具编号</th>
                                <th>记录值</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in vmManager.detailDatas track by $index">
                                <td>{{item.InspectionItem}}</td>
                                <td>{{item.SizeMemo}}</td>
                                <td>{{item.InspectionLevel}}</td>
                                <td>{{item.InspectionMode}}</td>
                                <td>{{item.InspectionSolution}}</td>
                                <td>{{item.EquipmentId}}</td>
                                <td>
                                    <table class="table table-bordered table-condensed">
                                        <tbody>
                                            <tr ng-repeat="row in item.dataList">
                                                <td ng-repeat="col in row.cols" style="text-align:center">
                                                    <span>
                                                        {{col.indata}}
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-md-offset-5">
                        <button class="btn btn-warning" type="button" ng-click="vmManager.showCheckModal()" ng-show="vmManager.currentItem.InspectionStatus!=='已审核'"><i class="fa  fa-eyedropper"></i>审核</button>
                        <button class="btn btn-success" type="button"><i class="fa fa-file-text"></i>导出</button>
                        <button class="btn btn-default" type="button" ng-click="vmManager.refresh()"><i class="fa fa-reply"></i>返回</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer">

    </div>
</div>