
@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="bpm.toolsOnlineApp">
<head>
    <meta http-equiv="Content-Type" />
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1,user-scalable=no" />
    <title>在线工具</title>
    <link rel="shortcut icon" href="@Url.Content("~/Content/login/lmlogo.png")" />
    <link href="@Url.Content("~/Content/bootstrap/dist/css/bootstrap.min.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootwatch/cerulean.bootstrap.min.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/font-awesome/css/font-awesome.min.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/main.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/zTree/dist/css/zTreeStyle/zTreeStyle.css")" type="text/css" rel="stylesheet" />

    @Styles.Render("~/css/anstrap")
</head>

<body>
    @if (ViewBag.IsLoginMode)
    {
        <div yl-navigation-layout data-module-text="在线工具" data-module-name="ToolsOnLine"></div>
    }
    else
    {
        <div>
            <header role="banner">
                <nav role="navigation" class="navbar navbar-static-top navbar-inverse">
                    <div class="container">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="@Url.Action("Index","Home")">
                                <span>
                                    <img alt="光圣科技（宁波）有限公司" title="光圣科技（宁波）有限公司"
                                         src="@Url.Content("~/Content/login/lmlogo.png")" />企业信息化平台(V1.0)
                                </span>
                            </a>
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li>
                                    <a href="#">测试页面</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>

            <main class="container-fluid">
                <div class="row">
                    <div class="col-md-2">
                        <div class="bs-callout bs-callout-info">
                            <h4><span class="fa fa-list-ul">导航菜单</span></h4>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <ol class="rounded-list">
                                    <li>
                                        <a data-ui-sref-active="active" data-ui-sref="tolManpowerDisk" style="cursor:pointer">人力磁盘</a>
                                        <a data-ui-sref-active="active" data-ui-sref="collaborateContactLib" style="cursor:pointer">名片夹</a>
                                        <a data-ui-sref-active="active" data-ui-sref="reportImproveProblem" style="cursor:pointer">上报改善问题</a>

                                        <a data-ui-sref-active="active" data-ui-sref="wFInternalContactForm" style="cursor:pointer">内部联络单</a>

                                        <a data-ui-sref-active="active" data-ui-sref="hwMaterialBaseConfig" style="cursor:pointer">物料基础配置信息</a>

                                        <a data-ui-sref-active="active" data-ui-sref="hwManpowerInput" style="cursor:pointer">人力</a>
                                        <a data-ui-sref-active="active" data-ui-sref="hwLogisticDeliveryInput" style="cursor:pointer">物流</a>
                                        <a data-ui-sref-active="active" data-ui-sref="hwInventoryDetail" style="cursor:pointer">物料看板明细</a>
                                    </li>
                                </ol>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-10">
                        <div data-ui-view>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    }

    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/angularJs")

    <script src="@Url.Content("~/Content/ztree/dist/js/jquery.ztree.all.min.js")"></script>
    <script src="@Url.Content("~/Content/pdfmaker/pdfmake.min.js")"></script>
    <script src="@Url.Content("~/Content/pdfmaker/vfs_fonts.js")"></script>
    @Scripts.Render("~/bundles/anstrap")

    <script src="~/Content/ueditor/ueditor.config.js" type="text/javascript"></script>
    <script src="~/Content/ueditor/ueditor.all.min.js" type="text/javascript"></script>
    <script src="~/Content/ueditor/lang/zh-cn/zh-cn.js" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/common/angulee.js")"></script>
    <script src="@Url.Content("~/Scripts/common/commDirective.js")"></script>

    <script src="@Url.Content("~/Scripts/controller/masterProduct/mpConfigApp.js")"></script>

    <script src="@Url.Content("~/Scripts/controller/toolsOnLine/toolsOnlineApp.js")"></script>
    <script src="@Url.Content("~/Scripts/controller/toolsOnLine/tolOfficeAssistant.js")"></script>
    <script src="@Url.Content("~/Scripts/controller/toolsOnLine/tolWorkFlow.js")"></script>
    <script src="@Url.Content("~/Scripts/controller/toolsOnLine/tolHwCollaboration.js")"></script>
    <script src="@Url.Content("~/Scripts/controller/toolsOnLine/tolIntelligenceTunnel.js")"></script>
</body>
</html>