<div class="panel panel-primary" ng-controller="astBuildCheckListCtrl">
    <div bs-tabs bs-active-pane="vmManager.activeTab" cg-busy="{promise:promise}">
        <div bs-pane data-title="生成校验清单" data-name="initTab">
            <div class="well">
                <div class="row">
                    <div class="col-md-6">
                        <form class="form-inline" novalidate>
                            <div class="form-group">
                                <label for="inputDate">计划校验日期</label>
                                <input name="inputDate" type="date" class="form-control" ng-model="vmManager.planDate" format-date required />
                            </div>
                            <span class="btn btn-primary" ng-click="vmManager.getAstCheckList()"><i class="fa fa-search"></i>查询</span>
                            <a href="@Url.Action("CreateWaitingCheckList", "Equipment")" class="btn btn-success"><i class="fa fa-file-excel-o"></i>生成校验清单</a>
                        </form>
                    </div>
                </div>
            </div>
            <div class="well" cg-busy="{promise:searchPromise}">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="info">
                                <th>财产编号</th>
                                <th>设备名称</th>
                                <th>设备型号</th>
                                <th>制造编号</th>
                                <th>设备类别</th>
                                <th>保管单位</th>

                                <th>是否校验</th>
                                <th>校验类型</th>
                                <th>校验日期</th>
                                <th>计划校验日期</th>
                                <th>校验间隔</th>
                                <th>校验状态</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in vmManager.datasets track by $index">
                                <th>{{item.AssetNumber}}</th>
                                <th>{{item.EquipmentName}}</th>
                                <th>{{item.EquipmentSpec}}</th>
                                <th>{{item.ManufacturingNumber}}</th>
                                <th>{{item.EquipmentType}}</th>
                                <th>{{item.SafekeepDepartment}}</th>

                                <th>{{item.IsCheck}}</th>
                                <th>{{item.CheckType}}</th>
                                <th>{{item.CheckDate}}</th>
                                <th>{{item.PlannedCheckDate}}</th>
                                <th>{{item.CheckInterval}}</th>
                                <th>{{item.CheckState}}</th>
                            </tr>
                        </tbody>
                    </table>
                    <div yl-pagination
                         data-datasource="vmManager.datasource"
                         data-dataset="vmManager.datasets">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        
    </div>
</div>