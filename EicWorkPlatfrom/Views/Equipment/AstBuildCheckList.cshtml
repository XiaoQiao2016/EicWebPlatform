<div class="panel panel-default" ng-controller="astBuildCheckListCtrl">
    <div bs-tabs bs-active-pane="vmManager.activeTab" cg-busy="{promise:promise}">
        <div bs-pane data-title="生成校验清单" data-name="initTab">
            <div class="well">
                <div class="row">
                    <div class="col-md-6">
                        <form class="form-inline" novalidate>
                            <div class="form-group">
                                <label for="inputDate">计划校验日期</label>
                                <input name="inputDate" type="date" class="form-control" ng-model="vmManager.planDate" format-date required />
                            </div>
                            <span class="btn btn-primary" ng-click="vmManager.getAstCheckList()"><i class="fa fa-search"></i>查询</span>
                            <a href="@Url.Action("CreateWaitingCheckList", "Equipment")" class="btn btn-success"><i class="fa fa-file-excel-o"></i>生成校验清单</a>
                        </form>
                    </div>
                </div>
            </div>
            <div class="well" cg-busy="{promise:searchPromise}">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="info">
                                <th>Id</th>
                                <th>设备信息</th>
                                <th>校验信息</th>
                                <th>保管单位</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in vmManager.datasets track by $index">
                                <td class="text-success">{{$index+1}}</td>
                                <td>
                                    财产编号:<span style="margin-right:30px;">{{item.AssetNumber}}</span>
                                    设备名称:<span>{{item.EquipmentName}}</span>
                                   
                                    <hr />
                                    制造编号:<span style="margin-right:30px;">{{item.ManufacturingNumber}}</span>
                                    设备型号:<span>{{item.EquipmentSpec}}</span>
                                    <hr />
                                    设备类别:<span>{{item.EquipmentType}}</span>
                                </td>
                                <td>
                                    是否校验:<span style="margin-right:30px;">{{item.IsCheck}}</span>
                                    校验类型:<span>{{item.CheckType}}</span>
                                    <hr />
                                    校验日期:<span style="margin-right:30px;">{{item.CheckDate}}</span>
                                    计划校验日期:<span>{{item.PlannedCheckDate}}</span>
                                    <hr />
                                    校验间隔:<span style="margin-right:30px;">{{item.CheckInterval}}</span>
                                    校验状态:<span>{{item.CheckState}}</span>
                                </td>
                                <td>{{item.SafekeepDepartment}}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div yl-pagination
                         data-datasource="vmManager.datasource"
                         data-dataset="vmManager.datasets">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        
    </div>
</div>