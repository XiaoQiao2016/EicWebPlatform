<div class="panel panel-primary" ng-controller="astInputMaintenanceRecordCtrl">
    <div class="well">
        <div>
            <button class="btn btn-sm btn-primary" title="打开视频" ng-click="vedio.open()"><i class="fa fa-openid"></i></button>
            <button class="btn btn-sm btn-danger" title="关闭视频" ng-click="vedio.close()"><i class="fa fa-close"></i></button>
            <button class="btn btn-sm btn-default" ng-click="vedio.rotateLeft()" title="左转"><i class="fa fa-mail-reply"></i></button>
            <button class="btn btn-sm btn-default" ng-click="vedio.rotateRight()" title="右转"><i class="fa fa-mail-forward"></i></button>
            <input name="checkDate" type="date" ng-model="vm.MaintenanceDate" format-date required />
            <input name="assetNumber" ng-change="vmManager.getAstDatas()" ng-model="vm.AssetNumber" placeholder="请输入财产编号" required />
            <button class="btn btn-sm btn-success" ng-click="vedio.saveAsImage()" title="拍照记录"><i class="fa fa-video-camera"></i></button>
            <button class="btn btn-sm btn-info" title="保存记录" ng-click="operate.saveAll()"><i class="fa fa-save"></i></button>
            <span yl-operatemsg-board></span>
            <span class="label label-danger">警示：退出前请务必关闭视频，并点击其他窗口菜单</span>
        </div>
        <div class="h-split"></div>
        <div ng-show="maintenancevm.EquipmentName.length>0" cg-busy="{promise:searchPromise}">
            <span class="label label-default">{{maintenancevm.AssetNumber}}</span>
            <span class="label label-default">{{maintenancevm.EquipmentName}}</span>
            <span class="label label-default">{{maintenancevm.EquipmentSpec}}</span>
            <span class="label label-default">{{maintenancevm.ManufacturingNumber}}</span>
            <span class="label label-default">{{maintenancevm.SafekeepDepartment}}</span>
            <span class="label label-default">{{maintenancevm.IsMaintenance}}</span>
            <span class="label label-default">{{maintenancevm.MaintenanceDate}}</span>
            <span class="label label-default">{{maintenancevm.MaintenanceInterval}}</span>
            <span class="label label-default">{{maintenancevm.MaintenanceState}}</span>
            <div class="h-split"></div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div style="z-index:5;">
                    <object id="view1" draggable="true" type="application/x-eloamplugin" style="min-width:480px;min-height:400px;" name="view"></object>
                </div>
            </div>
            <div class="col-md-6" cg-busy="{promise:previewPromise}">
                <img class="img-rounded" ng-src="{{vedio.previewFileName}}" style="width:480px;height:400px;" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive" ng-show="vmManager.datasets.length>0">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="info">
                                <th>财产编号</th>
                                <th>设备名称</th>
                                <th>保养日期</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in vmManager.datasets track by $index">
                                <th>{{item.AssetNumber}}</th>
                                <th>{{item.EquipmentName}}</th>
                                <th>{{item.MaintenanceDate}}</th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer">

    </div>
</div>