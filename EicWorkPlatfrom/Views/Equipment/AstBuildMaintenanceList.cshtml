<div class="panel panel-default" ng-controller="astBuildCheckListCtrl">
    <div bs-tabs bs-active-pane="vmManager.activeTab" cg-busy="{promise:promise}">
        <div bs-pane data-title="生成保养清单" data-name="initTab">
            <div class="well">
                <div class="row">
                    <div class="col-md-6">
                        <form class="form-inline" novalidate>
                            <div class="form-group">
                                <label for="inputDate">计划保养日期</label>
                                <input name="inputDate" type="date" class="form-control" ng-model="vmManager.inputDate" format-date required />
                            </div>
                            <span class="btn btn-primary" ng-click="vmManager.getAstDatas(3)"><i class="fa fa-search"></i>查询</span>
                            <span class="btn btn-success" ng-click="vmManager.getAstDatas(3)"><i class="fa fa-file-excel-o"></i>生成保养清单</span>
                        </form>
                    </div>
                </div>
            </div>
            <div class="well" cg-busy="{promise:searchPromise}">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="info">
                                <th>财产编号</th>
                                <th>设备名称</th>
                                <th>设备型号</th>
                                <th>制造编号</th>
                                <th>设备类别</th>
                                <th>保管单位</th>
                                <th>是否保养</th>
                                <th>保养日期</th>
                                <th>保养间隔</th>
                                <th>计划保养日期</th>
                                <th>保养状态</th>
                                <th>操作(<i class="fa fa-pencil-square-o"></i>)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in vmManager.editDatas track by $index">
                                <td>{{item.AssetNumber}}</td>
                                <td>{{item.EquipmentName}}</td>
                                <td>{{item.EquipmentSpec}}</td>
                                <td>{{item.ManufacturingNumber}}</td>
                                <td>{{item.EquipmentType}}</td>
                                <td>{{item.SafekeepDepartment}}</td>
                                <td>{{item.IsMaintenance}}</td>
                                <td>{{item.MaintenanceDate}}</td>
                                <td>{{item.MaintenanceInterval}}</td>
                                <td>{{item.PlannedMaintenanceDate}}</td>
                                <td>{{item.MaintenanceState}}</td>
                                <td>
                                    <button class="btn btn-xs btn-primary" ng-click="operate.editItem(item)" title="修改">
                                        修改
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        @*<div bs-pane data-title="设备档案编辑" data-name="editTab">

            </div>*@
    </div>
    <div class="panel-footer">

    </div>
</div>