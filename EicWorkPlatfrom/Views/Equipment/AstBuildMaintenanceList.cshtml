<div class="panel panel-default" ng-controller="astBuildMaintenanceListCtrl">
    <div bs-tabs bs-active-pane="vmManager.activeTab" cg-busy="{promise:promise}">
        <div bs-pane data-title="生成保养清单" data-name="initTab">
            <div class="well">
                <div class="row">
                    <div class="col-md-6">
                        <form class="form-inline" novalidate>
                            <div class="form-group">
                                <div yl-month-button data-title-visible="true" data-yearmonth="vmManager.planMonth"></div>
                            </div>
                            <span class="btn btn-info" ng-click="vmManager.getAstMaintenanceList()"><i class="fa fa-search"></i>查询</span>
                            <a href="@Url.Action("CreateWaitingMaintenanceList", "Equipment")" class="btn btn-success"><i class="fa fa-file-excel-o"></i>生成保养清单</a>
                        </form>
                    </div>
                </div>
            </div>
            <div class="well" cg-busy="{promise:searchPromise}">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="info">
                                <th>财产编号</th>
                                <th>设备名称</th>
                                <th>设备型号</th>
                                <th>制造编号</th>
                                <th>设备类别</th>
                                <th>保管单位</th>
                                <th>是否保养</th>
                                <th>保养日期</th>
                                <th>保养间隔</th>
                                <th>计划保养日期</th>
                                <th>保养状态</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in vmManager.datasets track by $index">
                                <td>{{item.AssetNumber}}</td>
                                <td>{{item.EquipmentName}}</td>
                                <td>{{item.EquipmentSpec}}</td>
                                <td>{{item.ManufacturingNumber}}</td>
                                <td>{{item.EquipmentType}}</td>
                                <td>{{item.SafekeepDepartment}}</td>
                                <td>{{item.IsMaintenance}}</td>
                                <td>{{item.MaintenanceDate}}</td>
                                <td>{{item.MaintenanceInterval}}</td>
                                <td>{{item.PlannedMaintenanceDate}}</td>
                                <td>{{item.MaintenanceState}}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div yl-pagination
                         data-datasource="vmManager.datasource"
                         data-dataset="vmManager.datasets">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer">

    </div>
</div>