<div class="aside table-responsive" style="width:auto" tabindex="-1" role="dialog">
    <div class="aside-dialog">
        <div class="aside-content">
            <div class="aside-header" ng-show="title">
                <button type="button" class="close" ng-click="$hide()">&times;</button>
                <h4 class="aside-title">{{shippingBoard.selectedProductType}} ___WIP明细</h4>
            </div>
            <div class="aside-body" ng-show="content">
                <div class="panel panel-default">
                    <div class="panel-heading">
                    </div>
                    <div class="panel-body table-responsive" data-cg-busy="{promise:wipPromise}">
                        <div class="panel-group">
                            <div ng-class="(row==wipDataBoard.selectedBigStationItem)?'panel panel-primary':'panel panel-default'" ng-repeat="row in wipDataBoard.dataDetails"
                                 ng-click="wipDataBoard.showPerBigSationWipData(row)">
                                <div class="panel-heading">
                                    <strong>{{row.productBigStation}}</strong><span class="label label-info pull-right">{{row.totalCount}}</span>
                                </div>
                                <div class="panel-body" ng-show="row==wipDataBoard.selectedBigStationItem" ng-cloak>
                                    <table class="table table-striped table-hover table-condensed">
                                        <tbody>
                                            <tr ng-repeat="item in wipDataBoard.perBigStationWipDatas track by $index">
                                                <td><span>{{item.productStation}}</span></td>
                                                <td><span>{{item.stationTotalCount}}</span></td>
                                                <td>
                                                    <span class="btn btn-xs btn-primary" ng-click="wipDataBoard.showPerStationWipData(item.productStation)">明细</span>
                                                </td>
                                                <td>
                                                    <div class="well well-sm" style="min-width:600px;max-height:300px; overflow-y:scroll" ng-show="item.productStation==wipDataBoard.selectedStation">
                                                        <table class="table table-striped table-hover table-condensed">
                                                            <thead>
                                                                <tr class="info">
                                                                    <th>生产日期</th>
                                                                    <th>流程卡号</th>
                                                                    <th>生产数量</th>
                                                                    <th>员工工号</th>
                                                                    <th>员工姓名</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr ng-repeat="station in wipDataBoard.perStationWipDatas track by $index">
                                                                    <td>{{station.ProductDate}}</td>
                                                                    <td>{{station.FlowCardID}}</td>
                                                                    <td>{{station.GoodCount}}</td>
                                                                    <td>{{station.WorkerID}}</td>
                                                                    <td>{{station.WorkerName}}</td>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="aside-footer">
                <button type="button" class="btn btn-default" ng-click="$hide()">Close</button>
            </div>
        </div>
    </div>
</div>