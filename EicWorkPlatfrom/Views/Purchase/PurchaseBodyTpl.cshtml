<div class="aside table-responsive" style="min-width:800px;" tabindex="-1" role="dialog">
    <div class="aside-dialog">
        <div class="aside-content">
            <div class="aside-header" ng-show="title">
                <button type="button" class="close" ng-click="$hide()">&times;</button>
                <h4 class="aside-title">{{title}}</h4>
            </div>
            <div class="aside-body">
                <div ng-include="operate.bodyDetailsTemplateId"></div>
            </div>
            <div class="aside-footer">
                <button type="button" class="btn btn-primary" ng-click="operate.saveDatas()"><span class="fa fa-file-excel-o">导出数据</span></button>
            </div>
        </div>
    </div>

    <script type="text/ng-template" id="purchaseDetailsTemplate">
        <div style="max-height:550px;overflow-y:auto">
            <table class="table table-striped table-hover table-responsive">
                <thead>
                    <tr class="info">
                        <th>采购单号</th>
                        <th>品号</th>
                        <th>品名</th>
                        <th>规格</th>
                        <th>数量</th>
                        <th>单价</th>
                        <th>金额</th>
                        @*<th>供应商</th>*@
                        <th>仓库</th>
                        @*<th>交货信息</th>*@
                    </tr>
                </thead>
                <tbody cg-busy="{promise:purBodyPromise}">
                    <tr ng-repeat="item in pur.purBodyDetails">
                        <td>{{item.PurchaseID}}</td>
                        <td>{{item.ProductID}}</td>
                        <td>{{item.ProductName}}</td>
                        <td>{{item.ProductSpecify}}</td>

                        <td>{{item.PurchaseCount}}</td>
                        <td>{{item.PurchaseUnit}}</td>
                        <td>{{item.PurchaseAmmount}}</td>

                        @*<td>{{item.Warehouse}}</td>*@

                        @*<td></td>*@
                    </tr>
                </tbody>
            </table>
        </div>
    </script>

    <script id="requisitionDetailsTemplate" type="text/ng-template">
        <div style="max-height:550px;overflow-y:auto">
            <table class="table table-striped table-hover table-responsive">
                <thead>
                    <tr class="info">
                        <th>请购单号</th>
                        <th>品号</th>
                        <th>品名</th>
                        <th>规格</th>
                        <th>数量</th>
                        <th>单价</th>
                        <th>金额</th>
                        <th>供应商</th>
                        <th>仓库</th>
                        <th>备注</th>
                    </tr>
                </thead>
                <tbody cg-busy="{promise:reqBodyPromise}">
                    <tr ng-repeat="item in req.reqBodyDetails">
                        <td>{{item.BuyingID}}</td>
                        <td>{{item.ProductID}}</td>
                        <td>{{item.ProductName}}</td>
                        <td>{{item.ProductSpecify}}</td>

                        <td>{{item.RequisitionCount}}</td>
                        <td>{{item.PurchaseUnit}}</td>
                        <td>{{item.PurchaseAmmount}}</td>

                        <td>{{item.Warehouse}}</td>

                        <td>{{item.Memo}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </script>

    <script id="stockDetailsTemplate" type="text/ng-template">
        <div style="max-height:550px;overflow-y:auto">
            <table class="table table-striped table-hover table-responsive">
                <thead>
                    <tr class="info">
                        <th>进货单号</th>
                        <th>验收日期</th>
                        <th>品号</th>
                        <th>品名</th>
                        <th>规格</th>
                        <th>验收数量</th>
                        <th>进货单价</th>
                        <th>进货金额</th>
                        <th>仓库</th>
                        <th>库存数量</th>
                    </tr>
                </thead>
                <tbody cg-busy="{promise:stoBodyPromise}">
                    <tr ng-repeat="item in sto.stoBodyDetails">
                        <td>{{item.StockID}}</td>
                        <td>{{item.CheckDate}}</td>
                        <td>{{item.ProductID}}</td>
                        <td>{{item.ProductName}}</td>
                        <td>{{item.ProductSpecify}}</td>

                        <td>{{item.CheckCount}}</td>
                        <td>{{item.StockUnit}}</td>
                        <td>{{item.StockAmount}}</td>
                        <td>{{item.Warehouse}}</td>
                        <td>{{InventoryCount}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </script>
</div>