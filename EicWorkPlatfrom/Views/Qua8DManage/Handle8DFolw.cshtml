
<div class="panel panel-primary" ng-controller="Handle8DFormCtrl">
    <div class="panel-heading">
        <h6 class="panel-title"><i class="fa fa-pencil-square-o"></i>8D处理模块</h6>
    </div>

    <div class="panel-body">
        <div class="row">
            @*查询所得数据列表*@
            <div class="col-md-12">
                <form class="form-inline" cg-busy="{promise:searchPromise}">
                    <div class="form-group">
                        <label>单号</label>
                        <input type="text" placeholder="按8D单号查询" ng-model="vm.ReportId" ng-keypress="($event.which === 13)?vmManager.getQua8DCreateDatas():0">
                        <button class="btn btn-xs btn-primary" ng-click="vmManager.getQua8DCreateDatas()" type="button">查询</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="h-split"></div>
        @*查询所得初建表头信息*@
        <div class="row">
            <div class="table-responsive" cg-busy="{promise:searchPromise}">
                <table>
                    @*表格主题*@
                    @* <caption> </caption>*@
                    @*表格行*@
                    <tr>
                        @* 表格列 *@
                        @*<td>row 1, cell 1</td>*@
                        @*<td>row 1, cell 2</td>*@
                    </tr>
                    <tr>
                        @*  *@
                        @*<td>&nbsp;</td>*@
                        @*<td>row 2, cell 2</td>*@
                    </tr>
                </table>
            </div>
        </div>
        @*8步骤信息展示*@
        <div cg-busy="{promise:promise}">
            <div class="row">
                <div class="pull-left">
                    <ul class="list-group">
                        <li class="list-group-item active">
                            <h5 class="list-group-item-heading">
                                @*<i class="fa fa-user"></i>*@
                                <span class="fa fa-list-ul">处理步骤</span>
                                <span class="pull-right">
                                    <button type="button"
                                            ng-class="vmManager.stepDisplay!==false?'btn btn-xs btn-defulat':'btn btn-xs btn-success'"
                                            ng-model="vmManager.stepDisplay" bs-checkbox>
                                        <span ng-show="vmManager.stepDisplay===false"><i class="fa fa-hand-o-right"></i></span>
                                        <span ng-show="vmManager.stepDisplay"><i class="fa fa-hand-o-left "></i></span>
                                    </button>
                                </span>
                            </h5>
                        </li>

                        <li class="list-group-item" ng-show="vmManager.stepDisplay">
                            <ul class="nav nav-pills" style="max-height:420px;overflow-y:auto">
                                @*<li ng-repeat="step in vmManager.steps track by $index">*@
                                <li>
                                    <div class="bs-callout bs-callout-success" style="width:auto;margin:2px;cursor:pointer">
                                        <table class="table table-striped table-hover">
                                            <tbody>
                                                <tr ng-repeat="step in vmManager.steps track by $index">
                                                    <td>
                                                        <label class="label-success"></label>
                                                        <span ng-class="step.isCheck==true?'label label-warning':'label label-info'"> {{step.StepId}} </span>
                                                    </td>
                                                    <td>{{step.StepDescription}}</td>
                                                    <td>
                                                        <button type="button" ng-show="step.isCheck==false" class="btn btn-info btn-xs" ng-click="vmManager.selectStep(step)"><i class="fa fa-share"></i></button>
                                                        <button type="button" ng-show="step.isCheck==true" class="btn btn-primary btn-xs" ng-click="vmManager.selectStep(step)"><i class="fa fa-pencil-square-o" /></button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="col-md-9">
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-info">
                            <span><i class="glyphicon glyphicon-apple"></i>处理步骤详情</span>
                            @*<span class="pull-right">
                                    <span class="btn btn-xs btn-info" ng-click="operate.saveDatas()" cg-busy="{promise:savePromise}">
                                        <i class="fa fa-save"></i> 批量保存
                                    </span>
                                </span>*@
                        </li>
                    </ul>
                    @*展示*@
                    <div class="panel-group" role="tablist" ng-model="vmManager.viewDataset.activePanel" style="max-height:650px;overflow-y:auto" aria-multiselectable="true" bs-collapse>
                        <div class="panel panel-primary" ng-repeat="stepItem in vmManager.viewDataset track by $index">
                            @*列表标题*@
                            <div class="panel-heading" role="tab">
                                <h4 class="panel-title">
                                    <a bs-collapse-toggle>
                                        {{stepItem.stepData.StepDescription}}
                                    </a>
                                </h4>
                            </div>
                            @*列表展示详细部分*@
                            <div class="panel-collapse" role="tabpanel" bs-collapse-target>
                                <div class="panel-body">
                                    <div ng-show="stepItem.stepData.length>0">
                                        <ul class="nav nav-pills info" style="max-height:400px;overflow-y:auto">
                                            <li ng-repeat="m in vmManager.viewDataset track by $index">
                                                <div class="bs-callout bs-callout-success" style="width:auto;margin:1px;">
                                                    <div class="form-group">

                                                        <input type="text" placeholder="描述" ng-model="m.StepId" class="form-control" />
                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>