
<div class="panel panel-primary" ng-controller="Handle8DFormCtrl">
    <div class="panel-heading">
        <h6 class="panel-title"><i class="fa fa-pencil-square-o"></i>8D处理模块</h6>
    </div>

    <div class="panel-body">
        <div class="row">
            @*查询所得数据列表*@
            <div class="col-md-12">
                <form class="form-inline" cg-busy="{promise:searchPromise}">

                    <div class="form-group">
                        <label>单号</label>
                        <input type="text" placeholder="按8D单号查询" ng-model="vm.ReportId" ng-keypress="($event.which === 13)?vmManager.getQua8DCreateDatas():0">
                        <button class="btn btn-primary" ng-click="vmManager.query8DStepDatas()" type="button"><i class="fa fa-binoculars" aria-hidden="true"></i> 查  询 </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="h-split"></div>
        @*8步骤信息展示*@
        <div cg-busy="{promise:promise}">
            <div class="row">
                <div class="pull-left">
                    <ul class="list-group">
                        @*抬头*@
                        <li class="list-group-item active">
                            <h5 class="list-group-item-heading">
                                @*<i class="fa fa-user"></i>*@
                                <span class="fa fa-list-ul">处理步骤</span>
                                <span class="pull-right">
                                    <button type="button"
                                            ng-class="vmManager.stepDisplay!=false?'btn btn-xs btn-defulat':'btn btn-xs btn-success'"
                                            ng-model="vmManager.stepDisplay" bs-checkbox>
                                        <span ng-show="vmManager.stepDisplay===false"><i class="fa fa-hand-o-right"></i></span>
                                        <span ng-show="vmManager.stepDisplay"><i class="fa fa-hand-o-left "></i></span>
                                    </button>
                                </span>
                            </h5>
                        </li>
                        @*下面展示内容*@
                        <li class="list-group-item" ng-show="vmManager.stepDisplay">
                            <ul class="nav nav-pills" style="max-height:420px;overflow-y:auto">
                                @*<li ng-repeat="step in vmManager.steps track by $index">*@
                                <li>
                                    <div class="bs-callout bs-callout-success" style="width:auto;margin:2px;cursor:pointer">
                                        <table class="table table-striped table-hover">
                                            <tbody>
                                                <tr ng-repeat="item in vmManager.steps track by $index">
                                                    <td>
                                                        <span ng-class="item.IsCheck==true?'label label-info ':'label label-primary'"> {{item.StepName}} </span>
                                                    </td>
                                                    <td>{{item.StepTitle}}</td>
                                                    <td>
                                                        <button type="button" ng-show="item.IsCheck==true" class="btn btn-info btn-xs" ng-click="vmManager.selectStep(item)"><i class="fa fa-share"></i></button>
                                                        <button type="button" ng-show="item.IsCheck==false" class="btn btn-primary btn-xs" ng-click="vmManager.selectStep(item)"><i class="fa fa-pencil-square-o" /></button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="col-md-9">
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-info">
                            <span><i class="glyphicon glyphicon-apple"></i>处理步骤详情</span>
                            <button type="button"
                                    class="btn btn-xs btn-primary" ng-click="vmManager.showMasterData()">
                                <span ng-show="vmManager.isShowMasterData!=true"> <i class="fa fa-angle-double-down"></i></span>
                                <apan ng-show="vmManager.isShowMasterData===true"><i class="fa fa-angle-double-up"></i></apan>
                            </button>
                        </li>
                    </ul>
                    @*查询所得初建表头信息*@
                    <div ng-show="vmManager.isShowMasterData===true">
                        <div class="row clearfix">
                            <div class="col-md-12 well">

                                <div class="row">
                                    <div class="col-md-4">
                                        <p>
                                            <label>日期:</label>
                                            {{vmManager.reportMasterInfo.CreateReportDate}}
                                        </p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>
                                            <label>来源:</label>
                                            {{vmManager.reportMasterInfo.DiscoverPosition}}
                                        </p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>
                                            <label>责任单位:</label>
                                            {{vmManager.reportMasterInfo.AccountabilityDepartment}}
                                        </p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <p>
                                            <label>品名:</label>
                                            {{vmManager.reportMasterInfo.MaterialName}}
                                        </p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>
                                            <label>规格:</label>
                                            {{vmManager.reportMasterInfo.MaterialSpec}}
                                        </p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>
                                            <label>交货单/入库单号:</label>
                                            {{vmManager.reportMasterInfo.OrderId}}
                                        </p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <p>
                                            <label>批量:</label>
                                            {{vmManager.reportMasterInfo.MaterialCount}}
                                        </p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>
                                            <label>检验数:</label>
                                            {{ vmManager.reportMasterInfo.InspectCount }}
                                        </p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>
                                            <label>不良类别: </label>
                                            {{vmManager.reportMasterInfo.FailClass}}
                                        </p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <p>
                                            <label>不良数:</label>
                                            {{vmManager.reportMasterInfo.FailQty}}
                                        </p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>
                                            <label>不良率:</label>
                                            {{ vmManager.reportMasterInfo.FailRatio }}
                                        </p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    @*展示*@
                    <div class="panel-group" role="tablist" ng-model="vmManager.viewDataset.activePanel" style="max-height:650px;overflow-y:auto" aria-multiselectable="true" bs-collapse>
                        <div class="panel panel-primary" ng-repeat="item in vmManager.viewDataset track by $index">
                            @*列表标题*@
                            <div class="panel-heading" role="tab">
                                <div class="pull-right">
                                    <button class="btn btn-xs   btn-info" ng-click="operate.saveDatas(item)">
                                        <i class="fa fa-save"></i> 保存
                                    </button>
                                </div>
                                <h4 class="panel-title">
                                    <a bs-collapse-toggle>
                                        {{item.stepName}} : {{item.stepTitle}}
                                        <i class="fa fa-hand-peace-o pull-right" ng-show="item.isSaveSucceed"></i>
                                    </a>

                                </h4>
                            </div>

                            @*列表展示详细部分*@
                            <div class="panel-collapse" role="tabpanel" bs-collapse-target>
                                <div class="panel-body">
                                    <form name="form8DHandelData" role="form">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">主旨：</span>
                                                <input type="text" class="form-control" ng-model="item.VmDatas.StepDescription" />
                                                <div class="error-messages" ng-messages="form8DHandelData.StepDescription.$error" ng-show="operate.showValidation">
                                                    <small ng-message="required">表单主题不能为空</small>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <textarea rows="4" name="stepHandleContent" class="form-control" placeholder="依标题填充详细内容" ng-model="item.VmDatas.StepHandleContent" required />
                                            <div class="error-messages" ng-messages="form8DHandelData.stepHandleContent.$error" ng-show="operate.showValidation">
                                                <small ng-message="required">不能为空</small>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @* 上传附件   (需要输入一个标识符) *@
                                            <div class="col-md-4 pull-left">
                                                <div yl-upload-file></div>
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">
                                                        <a data-toggle="collapse" onclick="FnShowImg(url); return false;"  data-parent="#accordion">{{item.VmDatas.FileName}}
                                                        <img  class="img-rounded"   ng-src="{{item.VmDatas.ImgUrl}}"/>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <label class="col-md-2" name="signaturePersons" role="form">责任单位:</label>
                                            @*<input class="col-md-6 " type="text" name="signaturePersons" role="form" placeholder="签名(以逗号隔开)" ng-model="item.VmDatas.SignaturePersons" required />
                                                <div class="error-messages" ng-messages="form8DHandelData.signaturePersons.$error" ng-show="operate.showValidation">
                                                    <small ng-message="required">不能为空</small>
                                                </div>*@

                                            <div class="col-md-6">
                                                <div class="input-group">
                                                    <input name="signaturePersons" class="form-control" placeholder="签名(以逗号隔开)" ng-model="item.VmDatas.SignaturePersons" required />
                                                    <div class="error-messages" ng-messages="form8DHandelData.signaturePersons.$error" ng-show="operate.showValidation">
                                                        <small ng-message="required">责任单位不能为空</small>
                                                    </div>
                                                    <div class="input-group-btn">
                                                        <span class="btn btn-primary" ng-click="vmManager.showParticipantView('Confirmor')"><i class="fa fa-location-arrow"></i></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <dialog ng-if="dialog.open" modal data-close="dialog.close()" style="width:65%;">
                    <content dialog-title>
                        <i class="fa fa-pencil-square">选择用人单位及人员</i>
                    </content>
                    <content dialog-content style="width:100%;">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="panel panel-success">
                                    <div class="panel-heading">
                                        <h6 class="panel-title"><i class="glyphicon glyphicon-home"></i>组织架构图</h6>
                                    </div>
                                    <div class="panel-body" style="max-height:515px;overflow:auto">
                                        <ul data-yl-tree cg-busy="{promise:promise}"
                                            data-tree-dataset="ztree.configDataNodes"
                                            data-start-load="ztree.startLoad"
                                            ng-model="ztree.treeNode"
                                            data-binding-nodevm="ztree.bindNodeToVm()"
                                            id="{{ztree.treeId}}" class="ztree"></ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="bs-callout bs-callout-info" cg-busy="{promise:searchPromise}" style="height:480px;max-height:485px;overflow-y:auto;">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover table-bordered" style="table-layout:fixed;">
                                            <colgroup>
                                                <col width="60" />
                                                <col width="80" />
                                                <col width="80" />
                                                <col width="120" />
                                                <col width="150" />
                                            </colgroup>
                                            <thead>
                                                <tr class="info">
                                                    <th>
                                                        操作(
                                                        <i class="fa fa-pencil-square-o"></i>)
                                                    </th>
                                                    <th>工号</th>
                                                    <th>姓名</th>
                                                    <th>部门</th>
                                                    <th>Email</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="item in vmManager.dataset track by $index">
                                                    <td class="text-center">
                                                        <span ng-if="!item.IsChecked" ng-click="vmManager.selectParticipant(item)"><i class="fa fa-2x fa-square-o"></i></span>
                                                        <span class="text-success" ng-if="item.IsChecked" ng-click="vmManager.selectParticipant(item)"><i class="fa fa-2x fa-check-square"></i></span>
                                                    </td>
                                                    <td ng-bind="item.WorkerId"></td>
                                                    <td ng-bind="item.Name"></td>
                                                    <td ng-bind="item.Department"></td>
                                                    <td ng-bind="item.Email"></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <div ng-if="vmManager.datasource.length>0"
                                             yl-pagination
                                             data-dataset="vmManager.searchDataset"
                                             data-datasource="vmManager.datasource">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </content>
                </dialog>
            </div>

        </div>

    </div>
</div>