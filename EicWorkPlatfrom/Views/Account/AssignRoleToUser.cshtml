<div class="panel panel-default" ng-controller="addUserMatchRoleCtrl">
    <div class="panel-heading">
        <h6 class="panel-title"><i class="fa fa-pencil-square-o"></i>分配用户角色</h6>
    </div>
    <div class="panel-body">
        <div class="table-responsive" cg-busy="{promise:promise}">
            <div class="row">
                <div class="col-md-6">
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-info">
                            <div class="row">
                                <div class="col-md-4">
                                    <i class="fa fa-user"></i>
                                    <span>角色列表</span>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <input class="form-control" type="text" placeholder="输入角色快速定位" ng-model="filterRole" />
                                        <div class="input-group-addon">
                                            <i class="fa fa-search"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <span yl-switch-button data-toggle="vmManager.selectAll()" data-switched="isSelectAll"></span>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <ul class="nav nav-pills" style="max-height:450px;overflow-y:auto">
                                <li ng-repeat="role in vmManager.roles|filter:filterRole track by $index">
                                    <div class="well well-sm">
                                        <input type="checkbox" ng-model="role.isSelect" ng-change="vmManager.selectRole(role)" />
                                        <span class="label label-primary">{{role.RoleId}}</span>
                                        <br />
                                        <span data-title="角色等级{{role.RoleLevel}}" data-bs-tooltip>
                                            <i class="fa fa-user"></i>
                                            {{role.RoleName}}
                                        </span>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input type="search" class="form-control" ng-model="vm.UserId" ng-keypress="vmManager.findUserByUserId($event)" placeholder="请输入用户姓名并按下回车键进行查找" />
                        <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                    </div>
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-info">
                            <i class="fa fa-user"></i>
                            <span>{{vm.UserId}}</span>
                            <span>{{vm.UserName}}</span>
                            <span class="pull-right">
                                <span class="btn btn-xs btn-info" ng-click="operate.saveMatchRoles()">
                                    <i class="fa fa-save"></i> 批量保存
                                </span>
                            </span>
                        </li>
                        <li class="list-group-item">
                            <ul class="nav nav-pills info">
                                <li ng-repeat="role in vmManager.matchRoles track by $index">
                                    <div class="well well-sm">
                                        <span class="label label-primary">
                                            {{role.RoleId}}
                                            <span class="btn btn-xs btn-danger" ng-click="vmManager.removeRole(role)">
                                                <i class="fa fa-remove"></i>
                                            </span>
                                        </span>
                                        <br />
                                        <span>
                                            <i class="fa fa-user"></i>
                                            {{role.RoleName}}
                                        </span>
                                    </div>
                                </li>
                            </ul>
                            <div yl-operatemsg-board></div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>