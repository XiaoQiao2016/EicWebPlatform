@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="eicPlatform.loginApp">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="shortcut icon" href="@Url.Content("~/Content/login/lmlogo.png")" />
    <link href="@Url.Content("~/Content/bootstrap/dist/css/bootstrap.min.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootwatch/cerulean.bootstrap.min.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/font-awesome/css/font-awesome.min.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/main.css")" type="text/css" rel="stylesheet" />

    <link href="@Url.Content("~/Content/login/login.css")" type="text/css" rel="stylesheet" />
</head>
<body>
    <div class="container" ng-controller="loginCtrl">
        <div class="row navigationBg">
            <div class="col-md-6">

            </div>
            <div class="col-md-5 loginBg">
                <form class="form-horizontal login-form" name="loginForm" method="post" novalidate role="form">
                    <div class="login-inputcontent">
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="userId">用户名:</label>
                            <div class="col-sm-7">
                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></div>
                                    <input class="form-control" name="userId" type="text" ng-keypress="moveFocusToPassword($event,'passwordFocus')"
                                           ng-model="vm.userId" autofocus required placeholder="默认为您的作业工号" />
                                </div>
                                <div class="error-messages" ng-messages="loginForm.userId.$error" ng-if="loginForm.userId.$touched">
                                    <small ng-message="required">用户名不能为空</small>
                                </div>
                            </div>
                        </div>

                        <div class="form-group login-inputpassword">
                            <label class="control-label col-sm-3" for="password">用户密码:</label>
                            <div class="col-sm-7">
                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                                    <input class="form-control" type="password" name="password" focus-if="focus.passwordFocus" focus-setter
                                           ng-model="vm.password" required placeholder="默认为您的作业工号" />
                                </div>
                                <div class="error-messages" ng-messages="loginForm.password.$error" ng-if="loginForm.password.$touched">
                                    <small ng-message="required">密码不能为空</small>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6 col-sm-offset-4">
                                <button type="submit" class="btn btn-primary btn-block login-button"
                                        ng-click="loginCheck(loginForm.$valid)" id="btnlogin">
                                    登录
                                    <span class="glyphicon glyphicon-log-in"></span>
                                    <img src="~/Content/login/input-spinner.gif" class="pull-right" ng-if="vm.start" ng-cloak />
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="navbar navbar-fixed-bottom">
            <div class="row">
                <div class="col-md-4">

                </div>
                <div class="col-md-4">
                    <span class="footer-links">All copyright reserved by EZconn Corporation 2016</span>
                </div>
                <div class="col-md-4">

                </div>
            </div>
        </div>
    </div>

    <script src="@Url.Content("~/Scripts/jquery-2.1.4.js")"></script>
    <script src="@Url.Content("~/Content/bootstrap/dist/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/angular.min.js")"></script>
    <script src="@Url.Content("~/Scripts/angular-messages.min.js")"></script>
    <script src="@Url.Content("~/Scripts/controller/account/loginApp.js")"></script>
</body>
</html>
