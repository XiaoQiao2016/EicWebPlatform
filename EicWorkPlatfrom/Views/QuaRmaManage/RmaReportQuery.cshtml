<div class="panel panel-primary" ng-controller="rmaReportQueryCtrl">
    <div class="panel-heading">
        <h6 class="panel-title">RMA表单查询管理</h6>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-10">
                <form class="form-inline" cg-busy="{promise:searchPromise}">
                    <div class="form-group">
                        <label>起始：</label>
                        <span yl-month-button data-title-visible="true" data-yearmonth="vmManager.searchFromYear"></span>
                    </div>
                    <div class="form-group">
                        <label>结束：</label>
                        <span yl-month-button data-title-visible="true" data-yearmonth="vmManager.searchToYear"></span>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success" ng-click="vmManager.getRmaDatas()" type="button">查询</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="h-split"></div>
        <div class="well" cg-busy="{promise:searchPromise}" style="padding:10px;overflow-y:scroll;min-height:280px;max-height:680px;">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr class="info">
                            <th>RMA单号</th>
                            <th>客户简称</th>
                            <th>品名</th>
                            <th>状态</th>
                            <th>明细(<i class="fa fa-pencil-square-o"></i>)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in vmManager.dataSets track by $index">
                            <td>{{item.RmaId}}</td>
                            <td>{{item.CustomerShortName}}</td>
                            <td>{{item.ProductName}}</td>
                            <td>{{item.RmaIdStatus}}</td>
                            <td>
                                <button type="button" class="btn btn-primary btn-xs" ng-click="vmManager.getDetailDatas(item)">明细</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                @* 分页处理 *@
                <div yl-pagination
                     data-dataset="vmManager.dataSets"
                     data-datasource="vmManager.dataSource">
                </div>
                <dialog ng-if="dialog.open" modal data-close="dialog.close()" style="width:75%;">
                    <content dialog-title>
                        <i class="fa fa-pencil-square">数据详细表</i>
                    </content>
                    <content dialog-content>
                        <div bs-tabs bs-active-pane="vmManager.activeTab">
                            <div bs-pane data-title="业务操作" data-name="businessTab">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr class="info">
                                                <th>序号</th>
                                                <th>销货单号</th>
                                                <th>品名</th>
                                                <th>数量</th>
                                                <th>客户编号</th>
                                                <th>客户名称</th>
                                                <th>处理数量</th>
                                                <th>订单号</th>
                                                <th>原出货日期</th>
                                                <th>不良现象</th>
                                                <th>处理意见</th>
                                                <th>付费方式</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="item in vmManager.businessHandleDatas track by $index">
                                                <td>{{item.RmaIdNumber}}</td>
                                                <td>{{item.ReturnHandleOrder}}</td>
                                                <td title="品号：{{item.ProdcutId}},规格:{{item.ProductSpec}}">
                                                    {{item.ProductName}}
                                                </td>
                                                <td>{{item.ProductCount}}</td>
                                                <td>{{item.CustomerId}}</td>
                                                <td>{{item.CustomerName}}</td>
                                                <td>{{item.RealityHandleProductCount}}</td>
                                                <td>{{item.SalesOrder}}</td>
                                                <td>{{item.ProductsShipDate}}</td>
                                                <td>{{item.BadDescription}}</td>
                                                <td>{{item.CustomerHandleSuggestion}}</td>
                                                <td>{{item.FeePaymentWay}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div bs-pane data-title="品保操作" data-name="qualityTab">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr class="info">
                                                <th>序号</th>
                                                <th>处理序号</th>
                                                <th>不良现象</th>
                                                <th>不良原因</th>
                                                <th>处理方式</th>
                                                <th>责任人</th>
                                                <th>完成日期</th>
                                                <th>工时</th>
                                                <th>责任归属</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="item in vmManager.dataSets track by $index">
                                                <td>{{item.RmaIdNumber}}</td>
                                                <td>{{item.RmaBussesesNumberStr}}</td>
                                                <td>{{item.BadDescription}}</td>
                                                <td>{{item.BadReadson}}</td>
                                                <td>{{item.HandleWay}}</td>
                                                <td>{{item.ResponsiblePerson}}</td>
                                                <td>{{item.FinishDate}}</td>
                                                <td>{{item.PayTime}}</td>
                                                <td>{{item.LiabilityBelongTo}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </content>

                </dialog>
            </div>
        </div>
    </div>
    <div class="panel-footer">
    </div>
</div>
